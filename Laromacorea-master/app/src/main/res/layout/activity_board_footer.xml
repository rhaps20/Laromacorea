<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/footer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:id="@+id/pagePrev"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[prev]"/>
        <TextView
            android:id="@+id/page1"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[1]"/>
        <TextView
            android:id="@+id/page2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[2]"/>
        <TextView
            android:id="@+id/page3"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[3]"/>
        <TextView
            android:id="@+id/page4"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[4]"/>
        <TextView
            android:id="@+id/page5"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[5]"/>
        <TextView
            android:id="@+id/page6"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[6]"/>
        <TextView
            android:id="@+id/page7"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[7]"/>
        <TextView
            android:id="@+id/page8"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[8]"/>
        <TextView
            android:id="@+id/page9"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[9]"/>
        <TextView
            android:id="@+id/page10"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[10]"/>
        <TextView
            android:id="@+id/pageNext"
            android:textSize="15sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[next]"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/writePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="글쓰기"/>
    </LinearLayout>
</LinearLayout>